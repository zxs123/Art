<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.instree.core.base.BaseDao">
	<!-- 新增 -->
	<insert id="create">
		<![CDATA[ ${value} ]]>
	</insert>

	<!-- 批量新增 -->
	<insert id="createOfBatch">
		<![CDATA[ ${value} ]]>
	</insert>

	<!-- 根据ID删除 -->
	<delete id="removeById">
		<![CDATA[ ${value} ]]>
	</delete>
	
	<!-- 根据指定字段删除 -->
	<delete id="removeObjOfBatchByColumn">
		 <![CDATA[ ${value} ]]> 
	</delete>
	
	<!-- 根据指定字段删除 -->
	<delete id="removeByColumnName">
		<![CDATA[ ${value} ]]>
	</delete>
	<delete id="removeOfBatchByColumnName">
		<![CDATA[ ${value} ]]>
	</delete>
	<!-- 批量删除 -->
	<delete id="removeOfBatch">
		<![CDATA[ ${value} ]]>
	</delete>

	<!-- 批量删除 -->
	<delete id="removeAll">
		<![CDATA[ ${value} ]]>
	</delete>

	<!-- 更新 -->
	<update id="modify">
		<![CDATA[ ${value} ]]>
	</update>
	
	<!-- 根据ID查询单个 -->
	<select id="findOneById" resultType="hashmap">
		<![CDATA[ ${value} ]]>
	</select>

	<!-- 查询所有 -->
	<select id="findAll" resultType="hashmap">
		<![CDATA[ ${value} ]]>
	</select>
	<!-- 根据指定字段查询数据 -->
	<select id="findOneByColumnName" resultType="hashmap">
		<![CDATA[ ${value} ]]>
	</select>
	<!-- 根据指定字段查询数据 -->
	<select id="findListByColumnName" resultType="hashmap">
		<![CDATA[ ${value} ]]>
	</select>

	<!-- 查询总数量 -->
	<select id="findAllCount" resultType="Long">
		<![CDATA[ ${value} ]]>
	</select>
	
	<select id="isExists" resultType="Boolean">
		<![CDATA[ ${value} ]]>
	</select>
	<select id="isExistsByColumn" resultType="Boolean">
		<![CDATA[ ${value} ]]>
	</select>
	
</mapper>
